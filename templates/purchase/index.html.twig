{% extends "base.html.twig" %}

{% block title %}
	Mes commandes
{% endblock %}

{% block body %}
	<div class="container pt-5">
		<h1>Mes commandes</h1>

		<table class="table table-striped">
			<thead>
				<tr>
					<th>Num√©ro</th>
					<th>Adresse</th>
					<th>Date de commande</th>
					<th>Produits</th>
					<th>Total</th>
				</tr>
			</thead>
			<tbody>
				{% for p in purchases %}
					{% set status = p.status %}
					{% if status == 'PAID' %}
						<tr>
							<td>{{ p.id }}</td>
							<td>{{ p.adress }}<br>{{ p.postalCode }},
								{{ p.city }}</td>
							<td>{{ p.purchasedAt | date('d/m/Y H:i') }}</td>
							<td>
								<ul>
									{% for item in p.purchaseItems %}
										<li>{{ item.quantity }}
											x
											{{ item.productName }}
											({{ item.total | amount }})</li>
									{% endfor %}
								</ul>
							</td>
							<td>{{ p.total | amount }}</td>
						</tr>
					{% endif %}
				{% endfor %}
			</tbody>
		</table>
	</div>
{% endblock %}
