<div class="card mb-3 me-2">
	{# <img src="{{ p.mainPicture }}" class="img-fluid" alt="Image du produit"> #}
	{% if not p.imageName is empty %}
		<img src="{{ vich_uploader_asset(p, 'imageFile') }}" class="img-fluid" alt="{{ p.name }}">
	{% else %}
		<img src="{{ asset('assets/img/default-img.jpg') }}" class="img-fluid" alt="Default Image">
	{% endif %}
	<div class="card-body">
		<h4 class="card-title">{{ p.name }}
			({{ p.price | amount }})</h4>
		<span class="badge bg-info">{{ p.category.name }}</span>
		<p class="card-text">
			{{ p.shortDescription|raw|nl2br|striptags|u.truncate(125, '...') }}
		</p>
		<a href="{{ path('product_show', {'category_slug': p.category.slug, 'slug': p.slug}) }}" class="btn btn-primary btn-sm">DÃ©tails</a>
		<a href="{{ path('cart_add', {'id': p.id}) }}" class="btn btn-success btn-sm">Ajouter</a>
	</div>
</div>
